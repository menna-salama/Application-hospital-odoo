<odoo>
    <record id="view_form_patient_log" model="ir.ui.view">
        <field name="name">hms.patient.log.form</field>
        <field name="model">hms.patient.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="created_by"/>
                        <field name="date"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_patient_log" model="ir.ui.view">
        <field name="name">hms.patient.log.tree</field>
        <field name="model">hms.patient.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_patient_log" model="ir.actions.act_window">
        <field name="name">Patient Logs</field>
        <field name="res_model">hms.patient.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hms_menu_patient_log" name="Patient Logs" parent="hms_menu_root" action="action_patient_log"/>
</odoo>
